---
/**
 * Landing page ‚Äî composed from Velocity-style components + React islands.
 * Layout: LandingLayout ‚Üí Header + Hero + Sections + Footer.
 */
import LandingLayout from "@/layouts/LandingLayout.astro";
import LandingHeader from "@/components/landing/LandingHeader.astro";
import Hero from "@/components/landing/Hero.astro";
import Section from "@/components/landing/Section.astro";
import InstallCommand from "@/components/landing/InstallCommand.astro";
import LandingFooter from "@/components/landing/LandingFooter.astro";
import TerminalDemo from "@/components/TerminalDemo";
import FeatureTabs from "@/components/FeatureTabs";

const installCmd = "curl -fsSL https://mine.rwolfe.io/install | bash";
---

<LandingLayout
  title="mine ‚Äî Your personal developer supercharger"
  description="A single Go binary that replaces the sprawl of productivity tools with one fast, delightful, opinionated companion. Tasks, focus timer, git workflow, AI, scaffolding, and more."
>
  <LandingHeader slot="header" />

  <Hero>
    <div slot="icon" class="animate-fade-up mb-8 text-[4.5rem]" style="filter: drop-shadow(0 0 40px rgba(212,160,23,0.25))">‚õèÔ∏è</div>
    <h1 slot="title" class="font-display animate-fade-up stagger-1 mb-6 text-[clamp(2.5rem,6vw,4.25rem)] font-extrabold leading-[1.08] tracking-tight">
      Your terminal,<br />
      <span class="text-gold-gradient">supercharged.</span>
    </h1>
    <p slot="description" class="animate-fade-up stagger-2 mx-auto mb-10 max-w-[540px] text-[clamp(1rem,2vw,1.15rem)] leading-relaxed text-[var(--l-text-2)]">
      One binary. No runtime dependencies. Tasks, focus sessions, git workflow, AI, scaffolding &mdash; everything a developer needs, nothing they don't.
    </p>
    <div slot="install" class="animate-fade-up stagger-3 mb-8">
      <InstallCommand command={installCmd} />
    </div>
    <div slot="actions" class="animate-fade-up stagger-4 flex flex-wrap justify-center gap-4">
      <a
        href="/getting-started/installation/"
        class="inline-flex items-center gap-1.5 rounded-[10px] bg-[var(--l-gold)] px-7 py-3 text-[0.95rem] font-semibold text-black no-underline transition-all hover:-translate-y-px hover:bg-[var(--l-gold-bright)] hover:no-underline hover:shadow-[0_0_24px_rgba(212,160,23,0.3)]"
      >
        Get Started &rarr;
      </a>
      <a
        href="https://github.com/rnwolfe/mine"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 rounded-[10px] border border-white/12 px-7 py-3 text-[0.95rem] font-semibold text-[var(--l-text-1)] no-underline transition-all hover:border-white/25 hover:bg-white/[0.04] hover:no-underline"
      >
        View on GitHub
      </a>
    </div>
  </Hero>

  <Section>
    <h2 class="font-display mb-14 text-center text-[clamp(1.75rem,4vw,2.5rem)] font-bold tracking-tight" data-reveal>
      See it in action.
    </h2>
    <div data-reveal>
      <TerminalDemo client:visible />
    </div>
  </Section>

  <Section>
    <h2 class="font-display mb-14 text-center text-[clamp(1.75rem,4vw,2.5rem)] font-bold tracking-tight" data-reveal>
      Everything you need.
    </h2>
    <div data-reveal>
      <FeatureTabs client:visible />
    </div>
  </Section>

  <Section borderTop>
    <h2 class="font-display mb-14 text-center text-[clamp(1.75rem,4vw,2.5rem)] font-bold tracking-tight" data-reveal>
      Built different.
    </h2>
    <div class="mt-14 grid grid-cols-1 gap-12 md:grid-cols-3">
      <div data-reveal data-reveal-delay="1">
        <div class="mb-4 text-3xl">‚ö°</div>
        <div class="font-display mb-3 text-lg font-bold">Radically Fast</div>
        <p class="text-sm leading-relaxed text-[var(--l-text-2)]">Every command responds in under 50&thinsp;ms. Single static binary. No runtime dependencies.</p>
      </div>
      <div data-reveal data-reveal-delay="2">
        <div class="mb-4 text-3xl">üîí</div>
        <div class="font-display mb-3 text-lg font-bold">Local-First</div>
        <p class="text-sm leading-relaxed text-[var(--l-text-2)]">Your data stays on your machine. SQLite with WAL mode. No cloud. No accounts.</p>
      </div>
      <div data-reveal data-reveal-delay="3">
        <div class="mb-4 text-3xl">üéØ</div>
        <div class="font-display mb-3 text-lg font-bold">Opinionated</div>
        <p class="text-sm leading-relaxed text-[var(--l-text-2)]">Smart defaults that just work. Escape hatches when you need them. Some features integrate with tools you already have.</p>
      </div>
    </div>
  </Section>

  <Section class="relative text-center">
    <div
      class="pointer-events-none absolute inset-0"
      style="background: radial-gradient(ellipse 60% 80% at 50% 80%, rgba(212,160,23,0.04) 0%, transparent 70%)"
      aria-hidden="true"
    ></div>
    <div class="relative">
      <h2 class="font-display mb-14 text-[clamp(1.75rem,4vw,2.5rem)] font-bold tracking-tight" data-reveal>
        Get started in seconds.
      </h2>
      <div data-reveal class="mb-6">
        <InstallCommand command={installCmd} />
      </div>
      <p class="font-mono text-sm text-[var(--l-text-3)]" data-reveal>
        or <code class="rounded border border-[var(--l-border)] bg-[var(--l-surface)] px-2 py-0.5 text-xs text-[var(--l-text-2)]">go install github.com/rnwolfe/mine@latest</code>
      </p>
      <div class="mt-8 flex justify-center" data-reveal>
        <a
          href="/getting-started/installation/"
          class="inline-flex items-center gap-1.5 rounded-[10px] bg-[var(--l-gold)] px-7 py-3 text-[0.95rem] font-semibold text-black no-underline transition-all hover:-translate-y-px hover:bg-[var(--l-gold-bright)] hover:no-underline hover:shadow-[0_0_24px_rgba(212,160,23,0.3)]"
        >
          Read the Docs &rarr;
        </a>
      </div>
    </div>
  </Section>

  <LandingFooter slot="footer" />
</LandingLayout>
