---
/**
 * Hero section (Velocity Hero pattern).
 * Centered layout with decorative gradient blob and named slots
 * for title, description, and actions.
 */
import { cn } from "@/lib/cn";

interface Props {
  class?: string;
  showGlow?: boolean;
}

const { class: className, showGlow = true } = Astro.props;
---

<section class={cn("relative overflow-hidden py-32 pb-20 text-center", className)}>
  {
    showGlow && (
      <div
        class="pointer-events-none absolute inset-0"
        style="background: radial-gradient(ellipse 70% 55% at 50% 35%, rgba(212,160,23,0.07) 0%, transparent 70%)"
        aria-hidden="true"
      />
    )
  }
  <div class="relative mx-auto max-w-[1100px] px-6">
    <slot name="icon" />
    <slot name="title" />
    <slot name="description" />
    <slot name="install" />
    <slot name="actions" />
  </div>
</section>
