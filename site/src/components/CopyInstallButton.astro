---
interface Props {
  command?: string;
}

const { command = 'curl -fsSL https://mine.rwolfe.io/install | bash' } = Astro.props;
---

<div class="copy-install" data-command={command}>
  <div class="copy-install__terminal">
    <div class="copy-install__chrome">
      <span class="copy-install__dot copy-install__dot--red"></span>
      <span class="copy-install__dot copy-install__dot--yellow"></span>
      <span class="copy-install__dot copy-install__dot--green"></span>
      <span class="copy-install__label">terminal</span>
    </div>
    <div class="copy-install__body">
      <span class="copy-install__prompt">$</span>
      <code class="copy-install__code">{command}</code>
      <button class="copy-install__btn" aria-label="Copy install command to clipboard">
        <svg class="copy-install__icon copy-install__icon--copy" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
          <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
        </svg>
        <svg class="copy-install__icon copy-install__icon--check" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 6 9 17l-5-5"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .copy-install__terminal {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    overflow: hidden;
    max-width: 40rem;
    margin: 0 auto;
  }

  .copy-install__chrome {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.75rem;
    background: var(--sl-color-gray-6);
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .copy-install__dot {
    width: 0.625rem;
    height: 0.625rem;
    border-radius: 50%;
  }

  .copy-install__dot--red { background: #ff5f57; }
  .copy-install__dot--yellow { background: #febc2e; }
  .copy-install__dot--green { background: #28c840; }

  .copy-install__label {
    font-size: 0.7rem;
    color: var(--sl-color-gray-3);
    margin-left: auto;
    margin-right: auto;
    padding-right: 2rem;
  }

  .copy-install__body {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--sl-color-black);
    font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace;
    font-size: 0.875rem;
  }

  .copy-install__prompt {
    color: var(--sl-color-accent);
    font-weight: 600;
    user-select: none;
  }

  .copy-install__code {
    color: var(--sl-color-gray-2);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    background: none;
    border: none;
    padding: 0;
    font: inherit;
  }

  .copy-install__btn {
    background: none;
    border: none;
    color: var(--sl-color-gray-3);
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 0.25rem;
    display: flex;
    align-items: center;
    transition: color 0.15s;
    flex-shrink: 0;
  }

  .copy-install__btn:hover {
    color: var(--sl-color-accent);
  }

  .copy-install__icon--check {
    display: none;
    color: #28c840;
  }

  .copy-install__btn[data-copied] .copy-install__icon--copy {
    display: none;
  }

  .copy-install__btn[data-copied] .copy-install__icon--check {
    display: block;
  }
</style>

<script>
  function initCopyButtons() {
    document.querySelectorAll('.copy-install').forEach((el) => {
      const btn = el.querySelector('.copy-install__btn');
      const command = el.getAttribute('data-command');
      if (!btn || !command) return;

      btn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(command);
          btn.setAttribute('data-copied', '');
          setTimeout(() => btn.removeAttribute('data-copied'), 2000);
        } catch {
          // Fallback for older browsers
          const textarea = document.createElement('textarea');
          textarea.value = command;
          textarea.style.position = 'fixed';
          textarea.style.opacity = '0';
          document.body.appendChild(textarea);
          textarea.select();
          document.execCommand('copy');
          document.body.removeChild(textarea);
          btn.setAttribute('data-copied', '');
          setTimeout(() => btn.removeAttribute('data-copied'), 2000);
        }
      });
    });
  }

  initCopyButtons();
  document.addEventListener('astro:after-swap', initCopyButtons);
</script>
